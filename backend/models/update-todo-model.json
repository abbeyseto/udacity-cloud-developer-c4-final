{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "group",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 5,
      "maxLength": 200,
      "pattern": "^[a-zA-Z0-9_\\-\\s]+$"
    },
    "dueDate": {
      "type": "string"
    },
    "done": {
      "type": "boolean",
      "default": false
    }
  },
  "required": [
    "name",
    "dueDate",
    "done"
  ],
  "additionalProperties": false
}
